{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
